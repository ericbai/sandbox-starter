{
  "trailingComma": "all",
  "tabWidth": 2,
  "semi": true,
  "singleQuote": true,
  "plugins": [
    "prettier-plugin-css-order",
    "prettier-plugin-organize-imports",
    "prettier-plugin-ejs"
  ],
  "overrides": [
    {
      "files": "*.scss",
      "options": {
        "tabWidth": 4
      }
    },
    {
      "files": "*.ejs",
      "options": {
        "tabWidth": 4
      }
    }
  ]
}
